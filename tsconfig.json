{
    "extends": [
        "@tsconfig/node20/tsconfig.json",
        "@tsconfig/strictest/tsconfig.json"
    ],
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "incremental": true,
        "strict": true,
        "experimentalDecorators": true,
        "verbatimModuleSyntax": true,

        // przywraca zachowanie operatora "?" - włączonego przez konfigurację strictest
        "exactOptionalPropertyTypes": false,

        // dostęp do tablicy poprzez indeks nie dodaje typu undefined
        "noUncheckedIndexedAccess": false
    }
}
