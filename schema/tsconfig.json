{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,

        // ukrycie warningu Jest
        "esModuleInterop": true,

        // konieczne, aby załączyć plik JS z walidatorem
        "allowJs": true
    },
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "jest.config.js"]
}
