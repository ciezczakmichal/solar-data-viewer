{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "rootDir": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,

        // konieczne, aby załączyć plik JS z walidatorem
        "allowJs": true,
        "checkJs": false,

        // dla dayjs
        "esModuleInterop": true
    }
}
