{
    "name": "schema",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "types": "dist/src/index.d.ts",
    "exports": {
        ".": "./dist/src/index.js",
        "./package.json": "./package.json"
    },
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "yarn generate-validator && tsc --build",
        "generate-validator": "node --experimental-specifier-resolution=node --no-warnings --loader ts-node/esm scripts/generate-standalone-validator.ts",
        "test": "yarn generate-validator && node --experimental-vm-modules --no-warnings $(yarn bin jest) --no-cache",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write ."
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-i18n": "^4.2.0",
        "dayjs": "^1.11.10"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "jest": "^29.7.0",
        "jest-extended": "^4.0.2",
        "prettier": "^3.1.1",
        "prettier-plugin-organize-imports": "^3.2.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
