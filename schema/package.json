{
    "name": "schema",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "types": "dist/src/index.d.ts",
    "exports": {
        ".": "./dist/src/index.js",
        "./package.json": "./package.json"
    },
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "yarn generate-validator && tsc --build",
        "generate-validator": "node --experimental-specifier-resolution=node --no-warnings --loader ts-node/esm scripts/generate-standalone-validator.ts",
        "test": "yarn generate-validator && node --experimental-vm-modules --no-warnings $(yarn bin jest) --no-cache"
    },
    "dependencies": {
        "ajv": "^8.11.0",
        "ajv-i18n": "^4.2.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^17.0.36",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "jest": "^29.0.2",
        "jest-extended": "^3.1.0",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    }
}
